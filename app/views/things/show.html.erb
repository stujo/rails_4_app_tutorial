<div class="page-header">
  <%= link_to things_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_thing_path(@thing), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show thing</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @thing.name %></dd>

  <dt>Description:</dt>
  <dd><%= @thing.description %></dd>

</dl>
